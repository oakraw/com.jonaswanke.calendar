<resources>

    <!-- Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeOverlay.App.AppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="ThemeOverlay.App.Popup" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Config Widgets -->
    <style name="Widget" />
    <style name="Widget.App" />
    <style name="Widget.App.Config.Header" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="Calendar.CalendarViewStyle">
        <item name="range">day</item>
        <item name="hourHeight">60dp</item>
        <item name="hourHeightMin">40dp</item>
        <item name="hourHeightMax">100dp</item>
    </style>

    <style name="Calendar.DayEventsViewStyle.ForDay">
        <item name="dateCurrentBackground">@null</item>
        <item name="timeCircleRadius">5dp</item>
        <item name="dividerPadding">16dp</item>
        <item name="eventSpacing">4dp</item>
        <item name="eventStackOverlap">400dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="Calendar.EventViewStyle">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#EA5236</item>
        <item name="borderWidth">0dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="titleDefault">@string/event_title_default</item>
    </style>

    <style name="Calendar.EventViewStyle.Add">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#0063E0</item>
        <item name="backgroundColorDefault">#F4F4F4</item>
        <item name="android:text">@string/event_title_add</item>
    </style>


    <style name="Calendar.HoursViewStyle">
        <item name="hourHeight">32dp</item>
        <item name="hourHeightMin">24dp</item>
        <item name="hourHeightMax">100dp</item>
        <item name="hourSize">12sp</item>
        <item name="hourColor">#4A4A4A</item>
    </style>
</resources>
